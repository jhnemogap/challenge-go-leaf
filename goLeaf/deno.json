{
  "lock": false,
  "tasks": {
    "start": "deno run -A --watch=src/static/,src/routes/ src/dev.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "proseWrap": "always",
    "semiColons": true,
    "singleQuote": true,
    "include": ["src/"]
  }
}
